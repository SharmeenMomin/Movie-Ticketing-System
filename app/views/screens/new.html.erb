<style>
  /* Center the form on the page */
  .form-container {
    max-width: 500px;
    margin: 50px auto;
    padding: 20px;
    background: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    text-align: center;
    font-family: Arial, sans-serif;
  }

  /* Heading Style */
  .form-container h1 {
    margin-bottom: 20px;
    color: #333;
  }

  /* Form Group */
  .form-group {
    margin-bottom: 15px;
    text-align: left;
  }

  /* Label Styling */
  .form-label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    font-size: 14px;
  }

  /* Input Fields */
  .form-input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 16px;
  }

  /* Form Actions (Buttons) */
  .form-actions {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
  }

  /* Buttons */
  .btn {
    padding: 10px 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    text-decoration: none;
  }

  .btn-primary {
    background: #007bff;
    color: white;
  }

  .btn-primary:hover {
    background: #0056b3;
  }

  .btn-secondary {
    background: #6c757d;
    color: white;
  }

  .btn-secondary:hover {
    background: #545b62;
  }
</style>

<div class="form-container">
  <h1>New Screen</h1>

  <%= form_with(model: @screen, local: true, html: { class: "screen-form" }) do |form| %>
    <div class="form-group">
      <%= form.label :name, "Screen Name", class: "form-label" %>
      <%= form.text_field :name, class: "form-input", placeholder: "Enter screen name", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :capacity, "Seat Capacity", class: "form-label" %>
      <%= form.number_field :capacity, min: 1, class: "form-input", placeholder: "Enter seat capacity", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :location, "Location", class: "form-label" %>
      <%= form.text_field :location, class: "form-input", placeholder: "Enter location", required: true %>
    </div>

    <div class="form-actions">
      <%= form.submit 'Create Screen', class: 'btn btn-primary' %>
      <%= link_to 'Manage Screens', screens_path, class: 'btn btn-secondary' %>

      <%= link_to 'Back to Admin Dashboard', admin_dashboard_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
