<%= form_with(model: show) do |form| %>
  <% if show.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(show.errors.count, "error") %> prohibited this show from being saved:</h2>

      <ul>
        <% show.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :movie_id, "Select Movie", style: "display: block" %>
    <%= form.collection_select(:movie_id, Movie.all, :id, :title, prompt: "Choose a Movie") %>

  </div>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.label :time, style: "display: block" %>
    <%= form.time_field :time %>
  </div>

  <div>
    <%= form.label :seats_available, style: "display: block" %>
    <%= form.number_field :seats_available, min: 0 %>
  </div>

  <div>
    <%= form.label :ticket_price, style: "display: block" %>
    <%= form.number_field :ticket_price, min: 0, step: 0.01 %>
  </div>

  <div class="field">
    <%= form.label :screen_id %>
    <%= form.collection_select :screen_id, Screen.all, :id, :name, prompt: "Select a Screen" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
