<h1>New Movie</h1>
<%= form_with model: @movie, url: admin_movies_path, local: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :release_date %>
    <%= f.date_field :release_date %>
  </div>

  <div>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>

  <div>
    <%= f.label :duration %>
    <%= f.number_field :duration %>
  </div>

  <div>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div>

  <div>
    <%= f.label :language %>
    <%= f.text_field :language %>
  </div>

  <div>
    <%= f.submit 'Create Movie' %>
  </div>
<% end %>

<%= link_to 'Back to Movies List', admin_movies_path %>
